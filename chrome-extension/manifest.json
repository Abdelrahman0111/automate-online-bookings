{
  "manifest_version": 3,
  "name": "WebBeds Reference Automation",
  "version": "1.0",
  "description": "أتمتة إضافة مراجع WebBeds",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://extranet.webbeds.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebBeds Automation"
  },
  "content_scripts": [
    {
      "matches": ["https://extranet.webbeds.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}